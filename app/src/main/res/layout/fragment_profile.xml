<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.SwipeRefreshLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/fragment_profile_swipe_refresh_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="?attr/fragment_profile_bakground_color"
    android:orientation="vertical"
    android:padding="10dp">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/fragment_profile_cover_image"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop"
                android:src="@drawable/test_image2" />

            <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/fragment_profile_profile_image"
                android:layout_width="?attr/fragment_profile_profile_circular_image_width"
                android:layout_height="?attr/fragment_profile_profile__circular_image_height"
                android:layout_gravity="center"
                android:layout_marginTop="-48dp"
                android:src="@drawable/test_image"
                app:civ_border_color="?attr/fragment_profile_profile__circular_image_civ_border_color"
                app:civ_border_width="?attr/fragment_profile_profile__circular_image_civ_border_width" />


            <ImageButton
                android:id="@+id/personal_settings"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginTop="-45dp"
                android:background="@android:color/transparent"
                android:paddingRight="10dp"
                android:src="@drawable/profile_section_settings_icon" />

            <TextView
                android:id="@+id/fragment_profile2_profile_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="30dp"
                android:background="?attr/fragment_profile_profile_name_background_color"
                android:gravity="center"
                android:paddingLeft="15dp"
                android:paddingTop="5dp"
                android:paddingRight="15dp"
                android:paddingBottom="5dp"
                android:text="Jhon Doe"
                android:textColor="?attr/fragment_profile_profile_name_text_color"
                android:textSize="?attr/fragment_profile_profile_name_text_size" />

            <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/cardview1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                app:cardBackgroundColor="?attr/fragment_profile_location__mobile_card_back_ground_color">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="?attr/fragment_profile_location_outside_layout_height"
                        android:orientation="horizontal"
                        android:weightSum="4">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="3"
                            android:gravity="center">

                            <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
                                android:id="@+id/fragment_profile_location_imageview"
                                android:layout_width="?attr/fragment_profile_location_circular_image_width"
                                android:layout_height="?attr/fragment_profile_location__circular_image_height"
                                android:layout_gravity="center"
                                android:src="@drawable/test_image"
                                app:civ_border_color="?attr/fragment_profile_location__circular_image_civ_border_color"
                                app:civ_border_width="?attr/fragment_profile_location__circular_image_civ_border_width" />

                        </LinearLayout>

                        <TextView
                            android:id="@+id/fragment_profile2_user_location"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="left|center"
                            android:text="Califonia, USA"
                            android:textColor="?attr/fragment_profile_profile_user_location_text_color"
                            android:textSize="?attr/fragment_profile_profile_user_location_text_size" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="?attr/fragment_profile_location_outside_layout_height"
                        android:orientation="horizontal"
                        android:weightSum="4">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="3"
                            android:gravity="center">

                            <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
                                android:id="@+id/fragment_profile_mobile_number_imageview"
                                android:layout_width="?attr/fragment_profile_location_circular_image_width"
                                android:layout_height="?attr/fragment_profile_location__circular_image_height"
                                android:layout_gravity="center"
                                android:src="@drawable/test_image"
                                app:civ_border_color="?attr/fragment_profile_location__circular_image_civ_border_color"
                                app:civ_border_width="?attr/fragment_profile_location__circular_image_civ_border_width" />

                        </LinearLayout>


                        <TextView
                            android:id="@+id/fragment_profile2_mobile_number"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="left|center"
                            android:text="+94718724671"
                            android:textColor="?attr/fragment_profile_profile_mobile_number_text_color"
                            android:textSize="?attr/fragment_profile_profile_mobile_number_text_size" />
                    </LinearLayout>
                </LinearLayout>
            </android.support.v7.widget.CardView>


            <LinearLayout
                android:id="@+id/makeTestForReport"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="10dp"
                android:weightSum="5">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="4"
                    android:gravity="center">

                    <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
                        android:id="@+id/fragment_profile_profile_url"
                        android:layout_width="?attr/fragment_profile_location_circular_image_width"
                        android:layout_height="?attr/fragment_profile_location__circular_image_height"
                        android:layout_gravity="center"
                        android:src="@drawable/test_image"
                        app:civ_border_color="?attr/fragment_profile_location__circular_image_civ_border_color"
                        app:civ_border_width="?attr/fragment_profile_location__circular_image_civ_border_width" />
                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center|left"
                    android:text="Do you have something to report?"
                    android:textColor="?attr/fragment_profile_profile_report_text_text_color"
                    android:textSize="?attr/fragment_profile_profile_report_text_text_size" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2">

                <Button
                    android:id="@+id/makePhotoToReport"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="?attr/fragment_profile_profile_photo_button_bakground_color"
                    android:text="Photo"
                    android:textAllCaps="false"
                    android:textColor="?attr/fragment_profile_profile_photo_button_text_color"
                    android:textSize="?attr/fragment_profile_profile_photo_button_text_size" />

                <Button
                    android:id="@+id/makeVideoToReport"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="?attr/fragment_profile_profile_video_button_bakground_color"
                    android:text="Video"
                    android:textAllCaps="false"
                    android:textColor="?attr/fragment_profile_profile_video_button_text_color"
                    android:textSize="?attr/fragment_profile_profile_video_button_text_size" />
            </LinearLayout>


            <Button
                android:id="@+id/viewProfilePosts"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:background="@android:color/transparent"
                android:gravity="center"
                android:text="Profile Posts"
                android:textAllCaps="false"
                android:textColor="?attr/fragment_profile_profile_profile_posts_button_text_color"
                android:textSize="?attr/fragment_profile_profile_profile_posts_button_text_size"
                android:textStyle="bold|italic" />


        </LinearLayout>
    </ScrollView>

</android.support.v4.widget.SwipeRefreshLayout>